{
  "name": "nuxt-one",
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "simple-git-hooks",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "commitlint": "commitlint --edit",
    "typecheck": "nuxt typecheck"
  },
  "dependencies": {
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/i18n": "^10.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@vueuse/core": "^13.5.0",
    "better-auth": "^1.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.3",
    "lucide-vue-next": "^0.525.0",
    "nuxt": "^4.0.0",
    "pg": "^8.16.3",
    "reka-ui": "^2.3.2",
    "shadcn-nuxt": "^2.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "trpc-nuxt": "^1.2.0",
    "tw-animate-css": "^1.3.5",
    "vue": "^3.5.17",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@iconify-json/radix-icons": "^1.2.2",
    "@iconify/vue": "^5.0.0",
    "@nuxt/eslint": "^1.6.0",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.31.0",
    "lint-staged": "^16.1.2",
    "nuxi": "^3.26.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "vue-tsc": "^3.0.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "vue-tsc": "3.0.3"
      }
    },
    "allowedDeprecatedVersions": {
      "glob": "*",
      "inflight": "1",
      "@esbuild-kit/core-utils": "3",
      "@esbuild-kit/esm-loader": "2",
      "are-we-there-yet": "2",
      "gauge": "3",
      "node-domexception": "1",
      "npmlog": "5",
      "rimraf": "3",
      "@types/parse-path": "7",
      "@oxc-parser/wasm": "0.60.0"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver",
      "vue-demi"
    ]
  },
  "resolutions": {
    "vite": "^7.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
